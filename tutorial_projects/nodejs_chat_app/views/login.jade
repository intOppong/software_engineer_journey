extends layout

block content
  .row
    .col-md-4.col-md-offset-4
      form(action='/login', method='post')
        .form-group
          label Username:
          input.form-control(type='text', name='username', paceholder='John Doe')
        .form-group
          label Password:
          input.form-control(type='password', name='password')
        .form-group
          input.btn.btn-primary(type='submit', value='Login')
